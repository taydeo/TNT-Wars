package com.rast.tntwars.systems;

import java.util.List;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.Material;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

import com.rast.tntwars.TNTWarsMain;

public class blockMenu {

	private TNTWarsMain tntwars = TNTWarsMain.getInstance;
	private Inventory chestInventory;
	private List<Material> materials;
	private int size ;
	private int emptySpace;
	
	public blockMenu () {
		size = materials.size();
		emptySpace = 9-size%9;
		chestInventory = Bukkit.createInventory(null, size+emptySpace, ChatColor.GOLD + "Items");
		for (Material material: materials) {
			chestInventory.addItem(new ItemStack(material, 1));
		}
		
		for (int i = 0; i < emptySpace; i++) {
			chestInventory.addItem(new Itemsta)
		}
	}
	
	public void openInventory () {
		
	}
	
}
